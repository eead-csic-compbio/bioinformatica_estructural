body { 
  text-align:left; 
  font-family: Verdana, Geneva, sans-serif;
  font-size: 15px;
  line-height: 20px;
  color: #2e282a;
  background-color: white;
} 

a {
  text-decoration: inherit;
  font-style: inherit;
  color: inherit;
}

a:link, a:visited {
    color: #006FDD;
    background-color: transparent;
    text-decoration: none;
}

a:link:hover {
    text-decoration: underline;
}

