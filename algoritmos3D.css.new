}

/* table layout */
table {
margin: 10px 0 15px 0;
border-collapse: collapse;
}
td,th {
padding: 3px 10px;
border: 0;
}
th {
padding: 5px 10px;
}

hr {
  color: #66cc00; 
}

@media screen and (min-width: 960px) {
body {
width: 960px;
margin:5px auto;
}
}

@media print {
body,code,pre code,h1,h2,h3,h4,h5,h6 {
color: black;
}

table, pre {
page-break-inside: avoid;
}
}
